{
  config,
  pkgs,
  ...
}: {
  wayland.windowManager.hyprland = {
    enable = true;
    systemd.enable = true;
    settings = {
      autogenerated = 0;

      env = [
        "XCURSOR_SIZE,16"
        "HYPRCURSOR_SIZE,24"
      ];

      "$terminal" = "ghostty";
      "$browser" = "zen";
      "$menu" = "wofi --show drun";

      general = {
        gaps_in = 3;
        gaps_out = 2;
        border_size = 2;
        resize_on_border = false;
        allow_tearing = false;
        layout = "dwindle";
      };

      dwindle = {
        pseudotile = true;
        preserve_split = true;
      };

      master = {
        new_status = "master";
      };

      misc = {
        force_default_wallpaper = 0;
        disable_hyprland_logo = true;
      };

      windowrulev2 = [
        "float, pin, opacity 1.0 override 1.0 override 1.0 override, initialTitle:^(Picture-in-Picture)$"
      ];

      ecosystem.no_update_news = true;

      input = {
        follow_mouse = 1;
        sensitivity = 0;
        touchpad = {
          natural_scroll = true;
        };
      };
    };
  };
}
